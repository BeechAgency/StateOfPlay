{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "Off Black",
                    "slug": "off-black",
                    "color": "#111414"
                },
                {
                    "name": "Mid Gray",
                    "slug": "mid-gray",
                    "color": "#747474"
                },
                {
                    "name": "Light Gray",
                    "slug": "light-gray",
                    "color": "#A8A8A8"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Blue",
                    "slug": "blue",
                    "color": "#0089D8"
                },
                {
                    "name": "Pink",
                    "slug": "pink",
                    "color": "#F295CE"
                },
                {
                    "name": "Rorange",
                    "slug": "rorange",
                    "color": "#FF5D36"
                },
                {
                    "name": "Green",
                    "slug": "green",
                    "color": "#00AF9B"
                },
                {
                    "name": "Yellow",
                    "slug": "yellow",
                    "color": "#FFD140"
                },
                {
                    "name": "Transparent",
                    "slug": "transparent",
                    "color": "transparent"
                }
            ],
            "customGradient": false,
            "defaultPalette": false,
            "defaultGradients": false,
            "gradients": []
        },
        "custom": {
            "line-height": {
                "body": 1.7,
                "heading": 1.3
            }
        },
        "layout": {
            "contentSize": "920px",
            "wideSize": "1280px"
        },
        "spacing": {
            "margin": false,
            "padding": true,
            "blockGap": true,
            "units": [ "rem" ],
            "customSpacingSize" : false,
            "spacingScale" : {
                "operator": "*",
                "increment": 1.25,
                "steps": 12,
                "mediumStep": 6,
                "unit": "rem"
            }
        },
        "typography": {
            "customFontSize": false,
            "lineHeight": true,
            "fluid": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": false,
            "fontSizes": [
              {
                "slug": "xs",
                "size": "0.869rem",
                "name": "XS"
              },
              {
                "slug": "x-small",
                "size": "0.869rem",
                "name": "XS"
              },
              {
                "slug": "small",
                "size": "1rem",
                "name": "Small"
              },
              {
                "slug": "medium",
                "size": "1.125rem",
                "name": "medium"
              },
              {
                "slug": "large",
                "size": "1.375rem",
                "name": "large"
              },
              {
                "slug": "x-large",
                "size": "1.75rem",
                "name": "xl"
              },
              {
                "slug": "xl",
                "size": "1.75rem",
                "name": "xl"
              },
              {
                "slug": "1-xl",
                "size": "3rem",
                "name": "1xl"
              },
              {
                "slug": "2-xl",
                "size": "3.75rem",
                "name": "2xl"
              },
              {
                "slug": "3-xl",
                "size": "5rem",
                "name": "3xl"
              },
              {
                "slug": "4-xl",
                "size": "6rem",
                "name": "4xl"
              }
            ],
            "fontFamilies":  [
              {
                "fontFamily": "Söhne Buch, Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "headings",
                "name": "Headings",
                "fontFace": [
                  {
                    "fontFamily": "Söhne Buch",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/soehne-buch.woff2",
                      "file:./assets/fonts/SohneBuch.ttf"
                    ]
                  },
                  {
                    "fontFamily": "Söhne Buch",
                    "fontWeight": "700",
                    "fontStyle": "bold",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/sohne-halbfett-webfont.woff2",
                      "file:./assets/fonts/sohne-halbfett-webfont.woff"
                    ]
                  }
                ]
              },
              {
                "fontFamily": "Söhne Buch, Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "body",
                "name": "Body",
                "fontFace": [
                  {
                    "fontFamily": "Söhne Buch",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/soehne-buch.woff2",
                      "file:./assets/fonts/SohneBuch.ttf"
                    ]
                  }
                ]
              },
              {
                "fontFamily": "Söhne Mono Buch, Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "mono",
                "name": "Mono",
                "fontFace": [
                  {
                    "fontFamily": "Söhne Mono Buch",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/champion-heavyweight-regular.woff2",
                      "file:./assets/fonts/SohneMonoBuch.ttf"
                    ]
                  }
                ]
              },
              {
                "fontFamily": "Champion HTF-Heavweight, Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "champion",
                "name": "Champion",
                "fontFace": [
                  {
                    "fontFamily": "Champion HTF-Heavweight",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/champion-heavyweight-regular.woff2",
                      "file:./assets/fonts/champion-heavyweight-regular.ttf"
                    ]
                  }
                ]
              },
              {
                "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
                "slug": "system-fonts",
                "name": "System fonts"
              },
              {
                "fontFamily": "Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "helvetica-arial",
                "name": "Helvetica or Arial"
              }
            ]
        }
    },
    "styles": {
        "color" : {
            "background" : "var(--wp--preset--color--transparent)",
            "text" : "var(--wp--preset--color--black)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--small)",
            "fontFamily": "var(--wp--preset--font-family--body)",
            "lineHeight": "1.5"
        },
        "elements": {
            "heading" : {
                "spacing": {
                    "margin" : {
                        "top" : "0",
                        "left" : "0",
                        "right" : "0",
                        "bottom" : "0.5rem"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--4-xl)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--3-xl)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.2"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--2-xl)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.2"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xl)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.2"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.2"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-medium)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.2"
                }
            },
            "p": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "lineHeight": "1.5"
                }
            },
            "link": {
        		"color": {
 			        "text": "var(--wp--preset--color--rorange)"
		        }
            }
        }
    }
}
