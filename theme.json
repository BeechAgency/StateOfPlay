{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Jet Black",
                    "slug": "jet-black",
                    "color": "#171819"
                },
                {
                    "name": "Jet Black (60%)",
                    "slug": "jet-black-60",
                    "color": "rgb(23 24 25 / 60%)"
                },
                {
                    "name": "Jet Tint",
                    "slug": "jet-tint",
                    "color": "#f1f1f1"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#ffffff"
                },
                {
                    "name": "Grape",
                    "slug": "grape",
                    "color": "#753bbd"
                },
                {
                    "name": "Blue Tang",
                    "slug": "blue-tang",
                    "color": "#2460D6"
                },
                {
                    "name": "Amethyst",
                    "slug": "amethyst",
                    "color": "#c1a7e2"
                },
                {
                    "name": "Celeste",
                    "slug": "celeste",
                    "color": "#bcfcf0"
                },
                {
                    "name": "Lemon Sorbet",
                    "slug": "lemon-sorbet",
                    "color": "#fefaaa"
                },
                {
                    "name": "Transparent",
                    "slug": "transparent",
                    "color": "transparent"
                }
            ],
            "customGradient": false,
            "defaultPalette": false,
            "defaultGradients": false,
            "gradients": []
        },
        "custom": {
            "line-height": {
                "body": 1.7,
                "heading": 1.3
            }
        },
        "layout": {
            "contentSize": "920px",
            "wideSize": "1280px"
        },
        "spacing": {
            "margin": false,
            "padding": true,
            "blockGap": true,
            "units": [ "rem" ],
            "customSpacingSize" : false,
            "spacingScale" : {
                "operator": "*",
                "increment": 1.25,
                "steps": 12,
                "mediumStep": 6,
                "unit": "rem"
            }
        },
        "typography": {
            "defaultFontSizes": false,
            "customFontSize": false,
            "lineHeight": true,
            "fluid": true,
            "fontStyle": true,
            "fontWeight": true,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": true,
            "dropCap": false,
            "fontSizes": [
              {
                "slug": "small",
                "size": "1rem",
                "name": "Small"
              },
              {
                "slug": "medium",
                "size": "1.25rem",
                "name": "Medium"
              },
              {
                "slug": "large",
                "size": "1.75rem",
                "name": "Large"
              },
              {
                "slug": "x-large",
                "size": "3rem",
                "name": "XL"
              },
              {
                "slug": "2-xl",
                "size": "4.5rem",
                "name": "2xl"
              },
              {
                "slug": "3-xl",
                "size": "6rem",
                "name": "3xl"
              }
            ],
            "fontFamilies":  [
              {
                "fontFamily": "KH Giga, Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "headings",
                "name": "Giga",
                "fontFace": [
                  {
                    "fontFamily": "KH Giga",
                    "fontWeight": "300",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/KHGigaTRIAL-Light.woff2"
                    ]
                  }
                ]
              },
              {
                "fontFamily": "KH Teka, Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "body",
                "name": "Teka",
                "fontFace": [
                  {
                    "fontFamily": "KH Teka",
                    "fontWeight": "400",
                    "fontStyle": "normal",
                    "fontStretch": "normal",
                    "src": [
                      "file:./assets/fonts/KHTekaTRIAL-Regular.woff2"
                    ]
                  }
                ]
              },
              {
                "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
                "slug": "system-fonts",
                "name": "System fonts"
              },
              {
                "fontFamily": "Helvetica Neue, Helvetica, Arial, sans-serif",
                "slug": "helvetica-arial",
                "name": "Helvetica or Arial"
              }
            ]
        }
    },
    "styles": {
        "color" : {
            "background" : "var(--wp--preset--color--transparent)",
            "text" : "var(--wp--preset--color--jet-black)"
        },
        "typography": {
            "fontSize": "var(--wp--preset--font-size--small)",
            "fontFamily": "var(--wp--preset--font-family--body)",
            "lineHeight": "1.45"
        },
        "elements": {
            "heading" : {
                "spacing": {
                    "margin" : {
                        "top" : "0",
                        "left" : "0",
                        "right" : "0",
                        "bottom" : "0.5rem"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--3-xl)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.06",
                    "letterSpacing" : "-0.046875rem"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--2-xl)",
                    "fontFamily": "var(--wp--preset--font-family--headings)",
                    "lineHeight": "1.08",
                    "letterSpacing": "-0.03125rem"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "lineHeight": "1.24",
                    "letterSpacing": "-0.021875rem"
                }
            },
            "h4": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "lineHeight": "1.35"
                }
            },
            "h5": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "lineHeight": "1.4"
                }
            },
            "h6": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "lineHeight": "1.45",
                    "textTransform" : "uppercase"
                }
            },
            "p": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "lineHeight": "1.45"
                }
            },
            "link": {
              "color": {
                "text": "var(--wp--preset--color--grape)"
              }
            }
        }
    }
}
